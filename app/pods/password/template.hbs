{{notification-container position="top"}}

<div class="container ad-container">

	<div class="row">	
		<div class="col-md-6">
			<h2>Reset your password</h2>

			<div class="form-group">
				<label>Enter new password </label>
				{{input type="password" value=newPassword class="form-control" }}
			</div>

			<div class="form-group">
				<label>Please type your new password again </label>
				{{input type="password" value=confirmPassword class="form-control" }}
			</div>

			<button class="btn btn-small btn-success" {{action "submitReset"}}>Reset My Password</button>

			{{#link-to "home" }}Back to Dashboard{{/link-to}}

		</div>	

		<div class="col-md-8">
		</div>
	</div>

</div>
