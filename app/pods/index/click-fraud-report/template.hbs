{{#bs-modal-simple open=1 size="lg" title="Click Fraud" onHide=(action "onHide") onShow=(action "refresh") }}
	<div class="container">
	    <div class="row">
	    	<div class="container">
	    		<form class="form-inline"  style="margin-bottom:10px">
					<div class="form-group">
						<label style="color:#666">Show results from &nbsp;</label> 
						{{#period-dropdown onSelectDay=(action "onSelectDay") }}{{/period-dropdown}}
					</div>&nbsp;
					<button class="btn btn-primary" {{action "refresh"}}>Refresh</button>
				</form>
	    	</div>
	    	
			<div class="col-lg-5">				
				<div>
					<h4>Total Automated Clicks vs Ad Clicks</h4>
					{{ember-chart type='doughnut' data=chartData.automatedClicksVsAdClicks options=chartOptions animate=true }}
				</div>
				<div>
					<h4>Top 5 Agencies by Automated Clicks</h4>
					{{ember-chart type='doughnut' data=chartData.topAgencyByAutomatedClicks options=chartOptions animate=true }}
				</div>
			</div>
	        
	        <div class="col-lg-7">
	        	{{ember-chart type='bar' data=chartData.clickFraudActivity options=graphOption animate=true }}
			</div>
		</div>
	</div>
{{/bs-modal-simple}}