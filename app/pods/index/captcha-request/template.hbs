{{#bs-modal-simple open=1 size="lg" title="Captcha Requests" onHide=(action "onHide") onShow=(action "refresh") }}
	<div class="container">
	    <div class="row">
	    	<div class="container">
	    		<form class="form-inline"  style="margin-bottom:10px">
	    			{{#website-dropdown userWebsites=userWebsites onSelect=(action "onSelectSite") }}{{/website-dropdown}}
	    			&nbsp;
					<div class="form-group">
						<label style="color:#666">Show results from &nbsp;</label> 
						<select class="form-control" onChange={{action "onSelectDay" value="target.value"}}>
							<option value="0">Show All</option>
							<option value="7">Last 7 Days</option>
							<option value="60">Last 60 Days</option>
						</select>
					</div>&nbsp;
					<button class="btn btn-primary" {{action "refresh"}}>Refresh</button>
				</form>
	    	</div>
	    	
			<div class="col-lg-5">				
				<div>
					<h4>Total Traffic vs. CAPTCHA Served</h4>
					{{ember-chart type='doughnut' data=chartData.totalTrafficVsCaptcha options=chartOptions animate=true }}
				</div>
				<div>
					<h4>Attempts Solved vs. Failed</h4>
					{{ember-chart type='doughnut' data=chartData.attemptsSolvedVsFailed options=chartOptions animate=true }}
				</div>
			</div>
	        
	        <div class="col-lg-7">
	        	{{ember-chart type='line' data=chartData.captchaRequests options=graphOption animate=true }}
			</div>
		</div>
	</div>
{{/bs-modal-simple}}