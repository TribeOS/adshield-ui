{{#bs-modal-simple open=1 size="lg" title="Complete Logd" onHide=(action "onHide") onShow=(action "refresh") }}
	<div class="container">
	    <div class="row">

	    	<div class="container">
	    		<form class="form-inline"  style="margin-bottom:10px">
					<div class="form-group">
						<label style="color:#666">Show results from &nbsp;</label> 
						{{#period-dropdown onSelectDay=(action "onSelectDay") }}{{/period-dropdown}}
					</div>&nbsp;
					<button class="btn btn-primary" {{action "fetchData"}}>Refresh</button>
				</form>
	    	</div>
	    	
			<div class="col-lg-12">	
				<div class="table-responsive">			
				<table class="table table-striped table-bordered marBot">
					<thead>
						<tr>
							<th scope="col">Action</th>
							<th scope="col">User</th>
							<th scope="col">Date/Time</th>
							<th scope="col">Details</th>
							<th scope="col">Origin IP/Location</th>
						</tr>
					</thead>
					<tbody>
						{{#each listData.data as |record|}}
							<tr>
								<td data-label="Account">{{ record.action }}</td>
								<td data-label="User">{{ record.username }}</td>
								<td data-label="Date/Time">{{ record.createdOn }}</td>
								<td data-label="Details">{{ record.details }}</td>
								<td data-label="Origin IP/Location">({{ record.ipStr }}) {{ record.city }}, {{ record.country }}</td>
							</tr>
						{{/each}}
					</tbody>
					<tfoot>
						<tr>
							<td colspan="5">
								{{#data-table-page source=listData gotoPage=(action "gotoPage")}}{{/data-table-page}}
							</td>
						</tr>
					</tfoot>
				</table>
				</div>
			</div>

		</div>
	</div>
{{/bs-modal-simple}}