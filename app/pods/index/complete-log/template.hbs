{{#bs-modal-simple open=1 size="lg" title="Complete Log" onHide=(action "onHide") onShow=(action "refresh") }}
	<div class="container">
	    <div class="row">

	    	<div class="container">
	    		<form class="form-inline"  style="margin-bottom:10px">
					<div class="form-group">
						<label style="color:#666">Show results from &nbsp;</label> 
						<select class="form-control" onChange={{action "onSelectDay" value="target.value"}}>
							<option value="0">Show All</option>
							<option value="7">Last 7 Days</option>
							<option value="60">Last 60 Days</option>
						</select>
					</div>&nbsp;
					<button class="btn btn-primary" {{action "refresh"}}>Refresh</button>
				</form>
	    	</div>
	    	
			<div class="col-lg-12">				
				{{data-table source=listData}}
			</div>

		</div>
	</div>
{{/bs-modal-simple}}