{{#bs-modal-simple open=1 size="lg" title="Complete Log" onHide=(action "onHide") onShow=(action "refresh") }}
	<div class="container">
	    <div class="row">

	    	<div class="container">
	    		<form class="form-inline"  style="margin-bottom:10px">
					<div class="form-group">
						<label style="color:#666">Show results from &nbsp;</label> 
						{{#period-dropdown onSelectDay=(action "onSelectDay") }}{{/period-dropdown}}
					</div>&nbsp;
					<button class="btn btn-primary" {{action "fetchData"}}>Refresh</button>
				</form>
	    	</div>
	    	
			<div class="col-lg-12">	
				<div class="table-responsive">			
				<table class="table table-striped table-bordered marBot">
					<thead>
						<tr>
							<th>Action</th>
							<th>User</th>
							<th>Date/Time</th>
							<th>Details</th>
							<th>Origin IP/Location</th>
						</tr>
					</thead>
					<tbody>
						{{#each listData.data as |record|}}
							<tr>
								<td>{{ record.action }}</td>
								<td>{{ record.username }}</td>
								<td>{{ record.createdOn }}</td>
								<td>{{ record.details }}</td>
								<td>({{ record.ipStr }}) {{ record.city }}, {{ record.country }}</td>
							</tr>
						{{/each}}
					</tbody>
					<tfoot>
						<tr>
							<td colspan="5">
								{{#data-table-page source=listData gotoPage=(action "gotoPage")}}{{/data-table-page}}
							</td>
						</tr>
					</tfoot>
				</table>
				</div>
			</div>

		</div>
	</div>
{{/bs-modal-simple}}