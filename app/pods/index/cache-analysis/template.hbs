{{#bs-modal-simple open=1 size="lg" title="Cache Analysis" onHide=(action "onHide") onShow=(action "refresh") as |modal| }}

	<div class="boxpad">
		<div class="container" style="margin-bottom:10px">
			<div class="row" style="vertical-align:middle">
				<form class="form-inline"  style="margin-bottom:10px">
					<div class="form-group">
						<label style="color:#666">Show results from &nbsp;</label> 
						{{#period-dropdown onSelectDay=(action "onSelectDay") }}{{/period-dropdown}}
					</div>&nbsp;
					<button class="btn btn-primary" {{action "refresh"}}>Refresh</button>
				</form>	
			</div>
		</div>
		<div class="row contentholder">
			<div class="col-lg-4 text-center">
				<h3>How effective is our caching </h3>
				{{ember-chart type='doughnut' data=chartData.cacheEffectivity options=chartOptions animate=true }}
			</div>
			<div class="col-lg-4 text-center">
				<h3>Where your CSS is served from</h3>
				{{ember-chart type='doughnut' data=chartData.cssServedFrom options=chartOptions animate=true }}
			</div>
			<div class="col-lg-4 text-center">
				<h3>Where your JS is served from</h3>
				{{ember-chart type='doughnut' data=chartData.jsServedFrom options=chartOptions animate=true }}
			</div>
		</div>
	</div>

{{/bs-modal-simple}}