{{#bs-modal-simple open=1 size="lg" title="Traffic By Organization" onHide=(action "onHide") onShow=(action "refresh") }}
	<div class="container">
	    <div class="row">
	    	<div class="container">
	    		<form class="form-inline"  style="margin-bottom:10px">
	    			{{#website-dropdown userWebsites=userWebsites onSelect=(action "onSelectSite") }}{{/website-dropdown}}
    				&nbsp;
					<div class="form-group">
						<label style="color:#666">Show results from &nbsp;</label> 
						{{#period-dropdown onSelectDay=(action "onSelectDay") }}{{/period-dropdown}}
					</div>&nbsp;
					<button class="btn btn-primary" {{action "fetchData"}}>Refresh</button>
				</form>
	    	</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<div class="table-responsive">

					<table class="table table-striped table-bordered marBot">
						<thead>
							<tr>
								<th scope="col">Organization</th>
								<th scope="col">Total Threats</th>
								<th scope="col">Top Country by Threats</th>
							</tr>
						</thead>
						<tbody>
							{{#each listData.data as |record|}}
								<tr>
									<td data-label="Organization">{{ record.organization }}</td>
									<td data-label="Total Threats">{{ record.total }}</td>
									<td data-label="Top Country by Threats">{{ record.country }}</td>
								</tr>
							{{/each}}
						</tbody>
						<tfoot>
							<tr>
								<td colspan="5">
									{{#data-table-page source=listData gotoPage=(action "gotoPage")}}{{/data-table-page}}
								</td>
							</tr>
						</tfoot>
					</table>

				</div>
			</div>
		</div>
	</div>
{{/bs-modal-simple}}