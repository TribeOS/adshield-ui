{{#bs-modal-simple open=1 size="lg" title="Threats Summary" onHide=(action "onHide") onShow=(action "refresh") }}
	<div class="container">
	    <div class="row">
	    	<div class="container">
	    		<form class="form-inline"  style="margin-bottom:10px">
	    			{{#website-dropdown userWebsites=userWebsites onSelect=(action "onSelectSite") }}{{/website-dropdown}}
    				&nbsp;
					<div class="form-group">
						<label style="color:#666">Show results from &nbsp;</label> 
						{{#period-dropdown onSelectDay=(action "onSelectDay") }}{{/period-dropdown}}
					</div>&nbsp;
					<button class="btn btn-primary" {{action "fetchData"}}>Refresh</button>
				</form>
	    	</div>
		</div>

		<div class="row">
			<div class="col-lg-4 text-center">
				<h3>Automated Traffic Classification</h3>
				{{ember-chart type='doughnut' data=chartData.automatedTrafficClassification options=chartOptions animate=true }}
			</div>
			<div class="col-lg-4 text-center">
				<h3>Top 5 Threats by Country</h3>
				{{ember-chart type='doughnut' data=chartData.topThreatsByCountry options=chartOptions animate=true }}
			</div>
			<div class="col-lg-4 text-center">
				<h3>Threats Averted</h3>
				{{ember-chart type='doughnut' data=chartData.threatsAverted options=chartOptions animate=true }}
			</div>
		</div>
	</div>
{{/bs-modal-simple}}