{{#bs-modal-simple open=1 size="lg" title="Overview" onHide=(action "onHide") onShow=(action "refresh") }}
    <div class="row">
    	<div class="col-lg-12">
    		<form class="form-inline"  style="margin-bottom:10px">
    			{{#website-dropdown userWebsites=userWebsites onSelect=(action "onSelectSite") }}{{/website-dropdown}}
    			&nbsp;
				<div class="form-group">
					<label style="color:#666">Show results from &nbsp;</label> 
					<select class="form-control" onChange={{action "onSelectDay" value="target.value"}}>
						<option value="0">Show All</option>
						<option value="7">Last 7 Days</option>
						<option value="60">Last 60 Days</option>
					</select>
				</div>&nbsp;
				<button class="btn btn-primary" {{action "fetchData"}}>Refresh</button>
			</form>
    	</div>

		<div class="col-lg-12">
			<h3 class="text-center">How we identified undesired automated traffic</h3>
        	{{ember-chart type='horizontalBar' data=chartData options=chartOptions animate=true }}
		</div>
	</div>
{{/bs-modal-simple}}