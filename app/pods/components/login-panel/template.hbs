{{#bs-form onSubmit=(action "authenticate") as |form|}}

	{{#if loginError}}
		<div class="alert alert-danger">{{loginError}}</div>
	{{/if}}

  	{{#form.group validation=usernameValidation}}
  		<label>Username</label>
		{{input id="log-username" type="text" placeholder="Username" value=identification class="form-control" }}
	{{/form.group}}

	{{#form.group validation=passwordValidation}}
		<label>Password</label>
		{{input id="log-password" type="password" placeholder="Password" value=password class="form-control" }}
 	{{/form.group}}


 	<button>Login</button>
 	
{{/bs-form}}