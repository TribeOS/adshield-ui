<table class="table table-bordered" style="background:#fff">
	<thead class="thead-dark">
		<tr>
			{{#each source.headers as |header|}}
				<th>{{header}}</th>
			{{/each}}
		</tr>
	</thead>
	<tbody>
		{{#each source.data as |rows|}}
			<tr>
				{{#each-in rows as |key value|}}
					<td class="{{if value.textLeft 'text-left'}} {{if value.textRight 'text-right'}} {{if value.textCenter 'text-center'}}">
						{{#if (eq value.type "action")}}
							<a href='#' {{action "onItemClick" value}}>{{ value.value }}</a>
						{{else}}
							{{#if (eq value.type "link")}}
								{{#link-to value.route value.param }}
									{{value.value}}
								{{/link-to}}
							{{else}}
								{{if value.value value.value value}}
							{{/if}}
						{{/if}}
					</td>
				{{/each-in}}
			</tr>
		{{/each}}
	</tbody>
</table>

<!-- insert pagination here -->
<nav aria-label="Page navigation example">
	<ul class="pagination">
		<li class="page-item">
			<a class="page-link" href="#" aria-label="First" {{action "firstPage"}}>
				<span>First</span>
			</a>
		</li>
		<li class="page-item">
			<a class="page-link" href="#" aria-label="Previous" {{action "previousPage"}}>
				<span aria-hidden="true">&laquo;</span>
				<span class="sr-only">Previous</span>
			</a>
		</li>
		<li class="page-item">
			<a class="page-link" href="#">
				<span>{{ source.total }} rows</span>
			</a>
		</li>
		<li class="page-item">
			<a class="page-link" href="#" aria-label="Next" {{action "nextPage"}}>
				<span aria-hidden="true">&raquo;</span>
				<span class="sr-only">Next</span>
			</a>
		</li>
		<li class="page-item">
			<a class="page-link" href="#" aria-label="Last" {{action "lastPage"}}>
				<span>Last</span>
			</a>
		</li>
	</ul>
</nav>
