<table class="table table-striped table-bordered marBot">
	<thead>
		<tr>
			<th scope="col">IP</th>
			<th scope="col"># of Violations</th>
		</tr>
	</thead>
	<tbody>
		{{#each source.data as |record|}}
			<tr>
				<td data-label="IP"><a href="#" {{ action "onItemClick" record.ip }}>{{ record.ip }}</a></td>
				<td data-label="# of Violations" align="center">{{ record.total }}</td>
			</tr>
		{{/each}}
	</tbody>
	<tfoot>
		<tr>
			<td colspan="5">
				{{#data-table-page source=source gotoPage=(action "gotoPage")}}{{/data-table-page}}
			</td>
		</tr>
	</tfoot>
</table>


