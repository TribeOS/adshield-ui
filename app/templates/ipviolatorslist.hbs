<div class="container">
    <div class="row">
		<div class="col-lg-12">
		<h3 style="color:#666; margin-top:20px">Known IP Violators List</h3>		
		<form class="form-inline"  style="margin-bottom:10px">
			<div class="form-group">
				<label style="color:#666">From this date &nbsp;</label>
				{{input type="text" class="form-control" value=filter.ip }}
			</div>&nbsp;
			<button class="btn" {{action "refresh"}}>Refresh</button>
		</form>
		</div>
		<div class="col-lg-12">
		{{#data-table source=listData nextPage="nextPage" firstPage="firstPage" lastPage="lastPage" previousPage="previousPage"}}
		{{/data-table}}
		</div>
	</div>
</div>